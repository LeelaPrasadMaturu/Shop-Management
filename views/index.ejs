<!DOCTYPE html>
<html>
<head>
    <title>Shops</title>
    <link rel="stylesheet" href="/index.css">
</head>
<body>
    <div class="container">
        <h1>Shop Manager</h1>
        
        <div class="form-container">
            <h2>Add a New Shop</h2>
            <form action="/shop/add" method="POST">
                <input type="text" name="shopName" placeholder="Shop Name" required>
                <button type="submit">Add Shop</button>
            </form>
        </div>

        <div class="shop-list-container">
            <h2>Shops</h2>
            <ul>
                <% shops.forEach(shop => { %>
                    <li class="shop-item">
                        <a href="/shop/<%= shop._id %>"><%= shop.name %></a>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
</body>
</html>
